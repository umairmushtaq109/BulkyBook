@model ShoppingCart

<form method="post">
    <input hidden  asp-for="ProductId">
    <div class="card container mt-3">
        <div class="card-header bg-secondary text-light ml-0 row">
            <div class="col-12 col-md-6">
                <h1 class="text-primary">@Model.Product.Title</h1>
                <p class="text-white">Written By: <strong>@Model.Product.Author</strong> </p>
            </div>
            <div class="col-12 col-md-6 text-end pt-4">
                <span class="badge bg-danger pt-2" style="height:30px;">@Model.Product.Category.Name</span>
                <span class="badge bg-info pt-2" style="height:30px;">@Model.Product.CoverType.Name</span>
            </div>
        </div>
        <div class="card-body row container">
            <div class="row">
                <div class="col-3">
                    <img src="@Model.Product.ImageUrl" class="img-thumbnail rounded img-responsive float-right" height="480" />
                </div>
            </div>
            <div class="rounded container p-2">
                <div class="col-lg-8 col-8">
                    <div class="row pl-2">
                        <h5 class="text-muted"><strong class="text-primary">ISBN:</strong> @Model.Product.ISBN</h5>
                        <h5 class="text-muted"><strong class="text-primary">List Price:</strong> <strike>$@Model.Product.ListPrice.ToString("0.00")</strike></h5>
                    </div>
                    <div class="row pl-2">
                        <div class="row text-center pl-2">
                            <div class="p-1 col-2 bg-secondary border-bottom">
                                <div>Quantity</div>
                            </div>
                            <div class="p-1 col-2 bg-secondary border-bottom">
                                <div>1-50</div>
                            </div>
                            <div class="p-1 col-2 bg-secondary border-bottom">
                                <div>51-100</div>
                            </div>
                            <div class="p-1 col-2 bg-secondary border-bottom">
                                <div>100+</div>
                            </div>
                        </div>
                        <div class="row text-center pl-2" style="color:maroon; font-weight:bold;">
                            <div class="p-1 col-2 border-bottom">
                                <div>Price</div>
                            </div>
                            <div class="p-1 col-2 border-bottom">
                                <div>$@Model.Product.Price.ToString("0.00")</div>
                            </div>
                            <div class="p-1 col-2 border-bottom">
                                <div>$@Model.Product.Price50.ToString("0.00")</div>
                            </div>
                            <div class="p-1 col-2 border-bottom">
                                <div>$@Model.Product.Price100.ToString("0.00")</div>
                            </div>
                        </div>
                        <div class="row pl-2 mt-3">
                            <p class="text-secondary">Description <br />@Html.Raw(@Model.Product.Description)</p>
                        </div>
                        <div class="row pl-2">
                            <div class="col-2 text-primary"><h5>Count</h5></div>
                            <div class="col-6"><input class="form-control" asp-for="@Model.Count" /></div>
                        </div>
                    </div>                    
                </div>
            </div>
        </div>
        <div class="card-footer bg-white">
            <div class="row">
                <div class="col-12 col-md-6 pb-1">
                    <a class="btn btn-success form-control" style="height:50px;" asp-action="Index">Back to Home</a>
                </div>
                <div class="col-12 col-md-6 pb-1">
                    <button type="submit" value="Add To Cart" class="btn btn-primary form-control" style="height:50px;">Add to Cart</button>
                </div>
            </div>
        </div>
    </div>
</form>
