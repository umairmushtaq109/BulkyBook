@model IEnumerable<Product>

<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12 p-1" style="border: 1px solid #2c3e50; border-radius: 5px;">
                    <div class="card">
                        <img src="@product.ImageUrl" class="card-img-top rounded img-responsive" height="380" />
                        <div class="p-2">
                            <p class="card-title h5 text-primary">@product.Title</p>
                            <p class="text-secondary">@product.Author</p>
                            <p>List Price: <strike><b>$@product.ListPrice.ToString("0.00")</b></strike></p>
                            <p>As low as: <b>$@product.Price100.ToString("0.00")</b></p>
                        </div>                        
                    </div>
                    <div>
                        <a asp-action="Details" asp-route-productId="@product.Id" class="btn btn-primary form-control mt-1">Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>


